{% block title %}Register{% endblock %}

{% block body %}
<section class="signin-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <a class="logo" href="{{ path('app_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="">
          </a>
          <h2 class="text-center">Créer votre compte</h2>
          {{ form_start(registrationForm, {'attr': {'class': 'text-left clearfix'}}) }}
            <div class="form-group">
              {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(registrationForm.contact, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de contact'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(registrationForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
            </div>
            <div class="text-center">
              {{ form_row(registrationForm.submit, {'attr': {'class': 'btn btn-main text-center'}}) }}
            </div>
          {{ form_end(registrationForm) }}
          <p class="mt-20">Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
