

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
           <link rel="stylesheet" href="css/style.css">
           <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<style>
.top-menu {
    list-style: none; /* Supprime les puces de la liste */
    margin: 0;
    padding: 0;
    text-align: right; /* Aligne le texte à droite */
}

.top-menu li {
    display: inline-block; /* Affiche les éléments en ligne */
    margin-right: 20px; /* Espace entre les éléments */
}

.top-menu li a {
    text-decoration: none; /* Supprime le soulignement des liens */
    color: #333; /* Couleur du texte */
}

.top-menu li a:hover {
    color: #007bff; /* Couleur du texte au survol */
}

.top-menu .dropdown-menu {
    min-width: 200px; /* Largeur minimale du dropdown */
    padding: 10px;
     margin-right: 30px;
}

.commonSelect select {
    width: auto;
    display: inline-block; /* Pour aligner le select avec les autres éléments */
}
.dashboard-menu {
    list-style: none; /* Supprime les puces */
    padding: 0; /* Supprime le padding par défaut */
    margin: 0; 
      padding: 10px 30px; /* Augmentez l'espacement horizontal */
    margin-right: 15px;/* Supprime la marge par défaut */
}

.dashboard-menu li {
    display: inline-block; /* Rend les éléments de la liste inline */
    margin-right: 10px; /* Espace entre les éléments */
}

.dashboard-menu li a {
    padding: 10px 20px; /* Ajuste l'espacement intérieur des liens */
    background-color: #fff; /* Couleur de fond par défaut */
    border: 1px solid #ddd; /* Bordure des liens */
    text-decoration: none; /* Supprime le soulignement */
    color: #333; /* Couleur du texte */
}

.dashboard-menu li a.active {
    background-color: #000; /* Couleur de fond pour le lien actif */
    color: #fff; /* Couleur du texte pour le lien actif */
}
.modal-body input[type="text"],
.modal-body input[type="email"],
.modal-body input[type="password"] {
    width: 100%;
    border-radius: 4px;
    border: 1px solid #ced4da;
}

.container {
    padding: 50px; /* Ajustez l'espace interne de la page */
}
.product-card {
    display: flex;
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: 0 auto;
     border-bottom: 2px solid #e0e0e0; /* Ajoute une ligne sous la carte du produit */
    margin-bottom: 20px; /* Crée un espace entre la carte du produit et le conteneur */
    padding-bottom: 20px; /* Ajoute un espace à l'intérieur de la carte du produit */
}

.product-image {
    flex: 1;
    margin-right: 20px;
}

.product-image img {
    max-width: 100%;
    border-radius: 10px;
}

.product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.product-details h2 {
    font-size: 24px;
    margin-bottom: 10px;
}

.product-price {
    font-size: 20px;
    color: #333;
    margin-bottom: 10px;
}

.product-description {
    font-size: 14px;
    color: #777;
    margin-bottom: 20px;
}

.add-to-cart {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-bottom: 10px;
     text-decoration: none; /* Enlève le soulignement */
    display: inline-block;
}

.view-details {
    font-size: 14px;
    color: #000;
    text-decoration: none;
    border-bottom: 1px solid #000;
}

.view-details:hover {
    text-decoration: underline;
}

</style>

{% endblock %}

